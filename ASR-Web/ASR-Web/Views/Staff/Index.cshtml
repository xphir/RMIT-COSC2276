@model IEnumerable<Staff>

@{
    ViewData["Title"] = "Index";
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StaffID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var staff in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(staffMember => staff.StaffID)
                </td>
                <td>
                    @Html.DisplayFor(staffMember => staff.Name)
                </td>
                <td>
                    @Html.DisplayFor(staffMember => staff.Email)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@staff.StaffID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@staff.StaffID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@staff.StaffID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>